omes = ['Matheus', 'João', 'Jorge', 'Pedro']
numeros = [1, 2, 3, 4, 5, 6]

for nome in nomes:
    print("Olá, " + nome)

for numero in numeros:
    if numero == 1:
        print ("Eu tenho " + str(numero) + " sorvete.")
    else:
        print ("Eu tenho  " + str(numero) + " sorvetes.")

for numero in numeros:
    print(3 * numero)

for nome in nomes:
    if nome == "Matheus":
        print(nome + ", você é o amor da Vivi.")
    elif nome == "João":
        print(nome + ", você é o bebê da Vivi.")
    else:
        print(nome + " é um desconhecido, cuidado!")

